<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/detail_separator_name"
            android:textColor="@color/separator_color"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/detail_pharmacy_name"
            android:textSize="@dimen/medium_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/detail_separator_Address"
            android:textColor="@color/separator_color"
            android:paddingTop="@dimen/medium_text_size"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/detail_pharmacy_address"
            android:textSize="@dimen/medium_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/detail_separator_phone"
            android:textColor="@color/separator_color"
            android:paddingTop="@dimen/medium_text_size"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/detail_pharmacy_phone"
            android:textColor="@color/phone_number_color"
            android:textSize="@dimen/medium_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/detail_separator_location"
            android:textColor="@color/separator_color"
            android:paddingTop="@dimen/separator_padding"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/detail_pharmacy_distance"
            android:textSize="@dimen/small_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/detail_pharmacy_latitude"
            android:textSize="@dimen/small_text_size"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/detail_pharmacy_longitude"
                android:textSize="@dimen/small_text_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>




    </LinearLayout>

</FrameLayout>